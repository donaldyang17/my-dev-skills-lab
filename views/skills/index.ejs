<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Developer Skills List</title>
  </head>
  <body>
    <h1>List of Skills</h1>
    <h2>The time is <%= time%></h2>
    <ul>
      <% skills.forEach(function(s) { %>
      <li>
        <form
          action="/skills/<%= s.skill %>?_method=DELETE"
          class="delete-form"
          method="POST"
        >
          <button type="submit">X</button>
        </form>

        <%= s.skill %>
      </li>
      <% }); %>
      <br />
      <a href="/skills/new">Add new skills</a>
    </ul>
  </body>
</html>
